<questionnaire xmlns="https://smesec.eu" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="https://smesec.eu https://smesec.eu/questionnaire.xsd"
               id="msesec-supply-chain" readableName="Supply Chain Security (MSE)"
               version="1" order="0" language="en">
    <description>
        This coach addresses Supply Chain aspects of cybersecurity for micro and small businesses.
    </description>

    <attachments>
        <attachment id="icon">
            <content filename="assets/coach-icon.png"/>
        </attachment>
    </attachments>

    <questions>
        <question id="q1100" type="info" hidden="false">
            <introduction>Supply Chain Security</introduction>
            <text>Intro</text>
            <infotext>&lt;strong&gt;This coach is not yet finished!&lt;/strong&gt;</infotext>
        </question>
        <question id="q1102" type="A" hidden="false" extRef="SC-5"><!-- partially addressed in first steps -->
            <text>Are external ICT systems which are relevant to your organisation catalogued?</text>
            <options>
                <option id="q1102o1">
                    <text>Yes, we know which external systems are relevant</text>
                </option>
                <option id="q1102o2">
                    <text>No, we don't know this</text>
                </option>
            </options>
        </question>
        <question id="q1105" type="A" hidden="false" extRef="SC-1">
            <text>Do you have procedures to manage supply chain risks?</text>
            <options>
                <option id="q1105o1">
                    <text>No we don't</text>
                </option>
                <option id="q1105o2">
                    <text>Yes, we have identified risks</text>
                </option>
                <option id="q1105o3">
                    <text>Yes, we have identified risks and implemented mitigation measures</text>
                </option>
            </options>
        </question>
        <question id="q1110" type="A" hidden="false" extRef="SC-4">
            <text>Are response and recovery procedures in case of an incident with a supplier or service-provider defined?</text>
            <options>
                <option id="q1110o1">
                    <text>Yes</text>
                </option>
                <option id="q1110o2">
                    <text>No</text>
                </option>
            </options>
        </question>
        <question id="q1115" type="A" hidden="false" extRef="SC-2">
            <text>Are your suppliers under contractual obligation to implement appropriate cybersecurity measures?</text>
            <options>
                <option id="q1115o1">
                    <text>No</text>
                </option>
                <option id="q1115o2">
                    <text>Some of them</text>
                </option>
                <option id="q1115o3">
                    <text>All of them</text>
                </option>
            </options>
        </question>
        <question id="q1120" type="A" hidden="false" extRef="SC-6">
            <text>Are all third-party stakeholders (suppliers, customers and partners) aware of their role and responsibility?</text>
            <options>
                <option id="q1120o1">
                    <text>Yes</text>
                </option>
                <option id="q1120o2">
                    <text>No</text>
                </option>
            </options>
        </question>
        <question id="q1125" type="A" hidden="false" extRef="SC-3">
            <text>Do you monitor and report whether suppliers are fulfilling their obligations?</text>
            <options>
                <option id="q1125o1">
                    <text>Yes</text>
                </option>
                <option id="q1125o2">
                    <text>No</text>
                </option>
            </options>
        </question>
        <question id="q1130" type="A" hidden="false" extRef="SC-7">
            <text>Do outsourced IT services meet requirements for cybersecurity and implement appropriate cybersecurity measures?</text>
            <options>
                <option id="q1130o1">
                    <text>Yes</text>
                </option>
                <option id="q1130o2">
                    <text>No</text>
                </option>
            </options>
        </question>
        <question id="q1198" type="info" hidden="false">
            <introduction>Supply Chain Security</introduction>
            <text>Coach completed</text>
            <infotext>
                &lt;p&gt;&lt;strong&gt;Congratulations, you have answered all questions of this coach.&lt;/strong&gt;&lt;/p&gt;
                &lt;p&gt;Click on «Next» to go back to the overview page.&lt;/p&gt;
            </infotext>
        </question>
    </questions>

    <library id="eu.smesec.cysec.coach.msesec.sc.MseSupplyChainLib"/>

</questionnaire>
